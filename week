      //determine winner
      if(total > 21){
        alert("You busted! Dealer wins.");
      }else if(dealer > 21){
        alert("Dealer busted! You win!");
      }else if(total > dealer){
        alert("You win!");
      }else if(total < dealer){
        alert("Dealer wins.");
      }else{
        alert("It's a tie!");
